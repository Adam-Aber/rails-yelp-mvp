<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <p><strong><%= review.rating %> star rating: </strong><%= review.content %></p>
    </li>
  <% end %>

  <li><%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-success mt-2" %></li>
  <li><%= link_to "Back to restaurants list", restaurants_path%></li>
</ul>